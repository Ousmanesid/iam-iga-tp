      "parameters": {
        "jsCode": "// Préparer les données pour le callback Gateway\nconst query = $input.first().json.query || {};\nconst requestId = query.request_id || query.requestId;\nconst approved = query.approved === 'true' || query.approved === true;\nconst reviewer = query.reviewer || query.reviewed_by || 'unknown';\nconst comment = query.comment || null;\n\nif (!requestId) {\n  throw new Error('request_id manquant dans les paramètres');\n}\n\nreturn {\n  request_id: requestId,\n  approved: approved,\n  reviewer: reviewer,\n  comment: comment,\n  timestamp: new Date().toISOString()\n};"
      },
      "id": "prepare-callback",
      "name": "Préparer callback",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [470, 300]
    },
    {
      "parameters": {
