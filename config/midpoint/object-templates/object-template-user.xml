    <!-- Auto-assign IT Admin role for Informatique department -->
    <mapping>
        <name>Auto-assign IT Admin</name>
        <strength>strong</strength>
        <source>
            <path>organization</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <filter>
                    <q:equal>
                        <q:path>name</q:path>
                        <q:value>IT Admin</q:value>
                    </q:equal>
                </filter>
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
        <condition>
            <script>
                <code>organization != null &amp;&amp; organization.toString().toLowerCase().contains('informatique')</code>
            </script>
        </condition>
    </mapping>

    <!-- Auto-assign Agent Commercial role for Commercial department -->
    <mapping>
        <name>Auto-assign Agent Commercial</name>
        <strength>strong</strength>
        <source>
            <path>organization</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <filter>
                    <q:equal>
                        <q:path>name</q:path>
                        <q:value>Agent Commercial</q:value>
                    </q:equal>
                </filter>
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
        <condition>
            <script>
                <code>organization != null &amp;&amp; organization.toString().toLowerCase().contains('commercial')</code>
            </script>
        </condition>
    </mapping>

    <!-- Auto-assign RH Manager role for RH/HR department -->
    <mapping>
        <name>Auto-assign RH Manager</name>
        <strength>strong</strength>
        <source>
            <path>organization</path>
        </source>
        <expression>
            <assignmentTargetSearch>
                <targetType>RoleType</targetType>
                <filter>
                    <q:equal>
                        <q:path>name</q:path>
                        <q:value>RH Manager</q:value>
                    </q:equal>
                </filter>
            </assignmentTargetSearch>
        </expression>
        <target>
            <path>assignment</path>
        </target>
        <condition>
            <script>
                <code>organization != null &amp;&amp; (organization.toString().toLowerCase().contains('rh') || organization.toString().toLowerCase().contains('human'))</code>
            </script>
        </condition>
    </mapping>

