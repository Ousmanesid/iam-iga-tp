<?xml version="1.0" encoding="UTF-8"?>
<!--
  Role: LDAP Employee Group
  Groupe LDAP géré par MidPoint
-->
<role oid="12345678-d34d-b33f-f00d-987987987992"
      xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>LDAP_Employee</name>
    <displayName>LDAP Employee Group</displayName>
    <description>Groupe LDAP Employee géré par MidPoint</description>

    <!-- Assignement au compte LDAP avec association au groupe Employee -->
    <inducement>
        <construction>
            <!-- Référence vers la ressource OpenLDAP (comptes utilisateurs) -->
            <resourceRef oid="8a83b1a4-be18-11e6-ae84-7301fdab1d7d"/>
            <kind>account</kind>
            <intent>default</intent>
            
            <!-- Association au groupe LDAP Employee -->
            <association>
                <ref>ri:group</ref>
                <outbound>
                    <expression>
                        <associationFromLink>
                            <projectionDiscriminator>
                                <kind>entitlement</kind>
                                <intent>group</intent>
                            </projectionDiscriminator>
                        </associationFromLink>
                    </expression>
                </outbound>
            </association>
        </construction>
    </inducement>
    
    <!-- Inducement pour créer/lier au groupe Employee -->
    <inducement>
        <construction>
            <resourceRef oid="8a83b1a4-be18-11e6-ae84-7301fdab1d7d"/>
            <kind>entitlement</kind>
            <intent>group</intent>
            <attribute>
                <ref>ri:cn</ref>
                <outbound>
                    <expression>
                        <value>Employee</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>

</role>
