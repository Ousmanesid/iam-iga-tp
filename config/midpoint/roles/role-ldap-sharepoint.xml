<?xml version="1.0" encoding="UTF-8"?>
<role oid="12345678-d34d-b33f-f00d-987987987995"
      xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
      xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance-3">

    <name>LDAP_Public_Share_Folder_SharePoint</name>
    <displayName>LDAP Public Share Folder SharePoint Group</displayName>
    <description>Groupe LDAP Public_Share_Folder_SharePoint géré par MidPoint</description>

    <!-- Assignement au compte LDAP avec association au groupe SharePoint -->
    <inducement>
        <construction>
            <resourceRef oid="8a83b1a4-be18-11e6-ae84-7301fdab1d7d"/>
            <kind>account</kind>
            <intent>default</intent>
            <association>
                <ref>ri:group</ref>
                <outbound>
                    <expression>
                        <associationFromLink>
                            <projectionDiscriminator>
                                <kind>entitlement</kind>
                                <intent>group</intent>
                            </projectionDiscriminator>
                        </associationFromLink>
                    </expression>
                </outbound>
            </association>
        </construction>
    </inducement>
    
    <!-- Inducement pour créer/lier au groupe SharePoint -->
    <inducement>
        <construction>
            <resourceRef oid="8a83b1a4-be18-11e6-ae84-7301fdab1d7d"/>
            <kind>entitlement</kind>
            <intent>group</intent>
            <attribute>
                <ref>ri:cn</ref>
                <outbound>
                    <expression>
                        <value>Public_Share_Folder_SharePoint</value>
                    </expression>
                </outbound>
            </attribute>
        </construction>
    </inducement>

</role>
